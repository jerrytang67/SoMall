{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@shared": [ "src/app/shared/index" ],
      "@shared/*": [ "src/app/shared/*" ],
      "@core": [ "src/app/core/index" ],
      "@core/*": [ "src/app/core/*" ],
      "@env/*": [ "src/environments/*" ]
    }
  }
}
